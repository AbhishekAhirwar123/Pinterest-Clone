<% include ./partials/header.ejs { user: user } %>

    <div id="main" class="w-full h-screen mt-[4%] mb-16 flex items-center justify-center">
        <div class="w-[32vw] bg-white px-20 py-4 rounded-[30px]">
            <img id="interest" class="ms-[120px]" src="/images/interest.png" alt="">
            <h1 class="text-center text-3xl font-bold text-zinc-800 tracking-tighter capitalize leading-none mb-2">
                Welcome to pinterest</h1>
            <h4 class="text-center text-zinc-700 mb-3">Find new ideas to try</h4>
            <form action="/register" method="post">

                <label class=" text-zinc-500 font-[500]   px-1 "> Username </label>
                <input class="border-2 rounded-lg block mt-1 mb-2 w-full px-3 py-2 " type="text" name="username"
                    placeholder="username">

                <label class=" text-zinc-500 font-[500]   px-1 "> Full Name </label>
                <input class="border-2 rounded-lg block mt-1 mb-2 w-full px-3 py-2 " type="text" name="fullname"
                    placeholder="full name">

                <label class=" text-zinc-500 font-[500] px-1 "> Email </label>
                <input class="border-2 rounded-lg block mt-1 mb-2 w-full px-3 py-2 " type="email" name="email"
                    placeholder="email">

                <!-- <label class="mt-2 text-zinc-500 font-[500] px-1 "> Number </label>
                <input class="border-2 rounded-lg block mt-1 mb-2 w-full px-3 py-2 " type="number" name="number"
                    placeholder="number"> -->

                <label class=" text-zinc-500 font-[500]  px-1 "> Password </label>
                <input class="border-2 rounded-lg block mt-1 mb-2 w-full px-3 py-2 " type="password" name="password"
                    placeholder="password">

                <input class="border-2  block mt-4 w-full px-3 py-2 bg-red-600 text-white rounded-full " type="submit"
                    value="Create New Account">
                <h2 class="text-center font-semibold p-1">OR</h2>
                <div id="fbbox" class=" p-2 rounded-full flex items-center justify-evenly ">
                    <img src="/images/fb2.png" alt="">
                    <h2> Continue with Facebook </h2>
                </div>
                <div id="gbox" class="mt-2 p-2 rounded-full flex items-center justify-evenly ">
                    <img src="/images/google.png" alt="">
                    <h2> Continue with Google </h2>
                </div>
                <p class="text-xs text-zinc-700 mt-3 w-3/3 text-center mx-auto">By continuing, you agree to Pinterest's
                    <span class="font-semibold">Terms of Service</span> and acknowledge you've read
                    our <span class="font-semibold"> Privacy Policy. Notice at collection.</span></p>
            </form>
            <!-- <a class="w-full inline-block mt-7 text-sm font-semibold text-zinc-700 text-center" href="/register">Don't have an account?? <span class="text-blue-600">Sign up</span></a> -->
            <span class="w-full inline-block mt-3 text-sm font-semibold text-zinc-700 text-center"> Already a member? <a
                    class="text-blue-600" href="/">Log in</a></span>
        </div>
    </div>
    <% include ./partials/footer.ejs %>