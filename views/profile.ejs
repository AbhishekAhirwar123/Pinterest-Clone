<% include ./partials/header.ejs %>

    <div class="profile w-full min-h-screen bg-[#FBFCF8] ">
        <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>
        <div class="profdets flex flex-col items-center mt-16">
            <div class="relative">
                <span id="uploadicon"
                    class="w-8 h-8 absolute bottom-0 right-0 rounded-full cursor-pointer flex items-center justify-center bg-zinc-900">
                    <i class="text-zinc-100 ri-pencil-line"></i>
                </span>
                <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
                </div>
            </div>
            <h1 class="text-4xl font-[Roboto] font-[500] mt-3 tracking-wide"> <%= user.name %> </h1>
            <h3 class="text-md m-1">@ <%= user.username %> </h3>
            <div class="mt-3">
                <a href="/share" class="px-6 py-2 bg-zinc-200 rounded-full text-sm font-[Roboto] font-[400]">Share</a>
                <a href="/edit" class="px-6 py-2 ms-2 bg-zinc-200 rounded-full text-sm font-[Roboto] font-[400]">Edit
                    Profile</a>
            </div>
            <!-- <button class="px-8 py-2 rounded-lg bg-yellow-500 text-sm font-[Roboto] font-[500] mt-3">Add New
                Post</button> -->
            <a href="/add" class="px-8 py-2 rounded-lg bg-yellow-500 text-sm font-[Roboto] font-[500] mt-3">Add New
                Post</a>
        </div>

        <div class="cards flex flex-wrap gap-10 px-8 mt-10">
            <div>
                <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover object-top" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
                </div>
                <!-- <h3 class="text-xl font-[Roboto] font-[500] mt-2">Your Uploaded Pins</h3> -->
                <a href="/show/posts" class="inline-block text-xl font-[Roboto] font-[500] mt-2">Your Uploaded Pins</a>
                <h5 class="text-sm font-medium opacity-80">
                    <%= user.posts.length %> Pins
                </h5>
            </div>
        </div>

    </div>


    <script>
        document.querySelector("#uploadicon").addEventListener("click", function () {
            document.querySelector("#uploadform input").click();
        })

        document.querySelector("#uploadform input").addEventListener("change", function () {
            document.querySelector("#uploadform").submit();
        })
    </script>

    <% include ./partials/footer.ejs %>