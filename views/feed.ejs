<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen px-10 py-8">
        <h1 class="text-4xl font-[Roboto] mb-8 text-center">Your Uploaded Posts</h1>
        <hr class="mb-16">
        <div class="cards flex flex-wrap gap-10 ">
            <% posts.forEach(function(elem){ %>
                <div class="card w-36 border-none">
                    <div class="w-full h-46 bg-sky-200 rounded-lg overflow-hidden border-2 border-dark-800">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                    </div>
                    <h2 class="mt-1 ms-1 text-lg font-[Roboto] opacity-90"><%= elem.title %></h2>
                    <!-- <h5 class="text-xs font-[Roboto] opacity-80"><%= elem.description %></h5> -->
                    <h6 class="text-xs font-semibold opacity-60">@ <%= elem.user.username %> </h6>
                </div>
                <% }) %>
        </div>
    </div>

    <% include ./partials/footer.ejs %>    